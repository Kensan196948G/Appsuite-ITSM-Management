{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 4],
    "no-undef": "warn",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "all"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "FontAwesome": "readonly",
    "DataStore": "readonly",
    "UserModule": "readonly",
    "AppModule": "readonly",
    "IncidentModule": "readonly",
    "ChangeModule": "readonly",
    "LogModule": "readonly",
    "SettingsModule": "readonly",
    "DashboardManager": "readonly",
    "AuthModule": "readonly",
    "Security": "readonly",
    "Validator": "readonly",
    "FormValidator": "readonly",
    "CsrfProtection": "readonly",
    "RateLimiter": "readonly",
    "PasswordValidator": "readonly",
    "DateUtils": "readonly",
    "Modal": "readonly",
    "Toast": "readonly",
    "KPIWidget": "readonly",
    "QuickActions": "readonly",
    "SystemStatus": "readonly",
    "escapeHtml": "readonly",
    "sanitizeInput": "readonly",
    "showToast": "readonly",
    "openModal": "readonly",
    "closeModal": "readonly",
    "showSection": "readonly",
    "updateDashboard": "readonly",
    "initApiSync": "readonly",
    "renderAppSummary": "readonly",
    "startApplicationAfterLogin": "readonly",
    "handleLogin": "readonly",
    "handleLogout": "readonly",
    "Chart": "readonly",
    "ApiSync": "readonly",
    "refreshAllModules": "readonly",
    "Pagination": "readonly",
    "Loading": "readonly",
    "Tabs": "readonly",
    "TableSort": "readonly",
    "SearchHighlight": "readonly"
  }
}
