{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 4],
    "no-undef": "warn",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "all"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "FontAwesome": "readonly"
  }
}
